<div class="row justify-content-center mt-3">
  <div class="col">
    <h1><%= t('.header') %></h1>

    <div>
      <table class="table table-hover table-responsive-md">
        <thead class="table-light">
        <tr>
          <th class="sort-by-title pointer">
            <%= t('tests.index.title') %>
            <%= octicon 'arrow-up', class: 'caption text-success hide' %>
            <%= octicon 'arrow-down', class: 'caption text-success hide' %>
          </th>
          <th><%= t('tests.index.level') %></th>
          <th><%= t('tests.index.category') %></th>
          <th><%= t('tests.index.question') %></th>
          <th><%= t('shared.actions.actions') %></th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        <%= render @tests %>
        </tbody>
      </table>
    </div>
  </div>
</div>
