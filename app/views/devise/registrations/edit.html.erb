<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <div class="card border-primary">
      <div class="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Enter first name' %>
            </p>

            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: 'Enter last name' %>
            </p>

            <p>
              <%= f.hidden_field :type, value: 'User' %>
            </p>

            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Enter email' %>
            </p>

            <p>
              <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>

              <%= f.password_field :password, class: 'form-control', placeholder: 'Enter new password' %>

              <% if @minimum_password_length %>
                <br/>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %>
            </p>

            <p>
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
            </p>

            <p>
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br/>
              <%= f.password_field :current_password, placeholder: 'Current password', class: 'form-control' %>
            </p>

            <%= f.submit "Update", class: 'btn btn-primary' %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col col-md-4">
    <h2>Cancel my account</h2>

    <div class="card border-primary">
      <div class="card-body">
        <div class="form-group">
          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-primary' %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row md-2">
    <%= link_to t('navigations.back'), :back %>

  </div>

</div>
