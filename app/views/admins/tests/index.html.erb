<div class="row justify-content-center mt-3">

  <div class="col">
    <h1><%= t('tests.index.header') %></h1>

    <p>
      <%= link_to t('tests.index.add_new'), new_admins_test_path, class: 'btn btn-outline-dark' %>
    </p>

    <div>
      <table class="table table-hover table-responsive-md">
        <thead class="table-light">
        <tr>
          <th><%= t('tests.index.title') %></th>
          <th><%= t('tests.index.level') %></th>
          <th><%= t('tests.index.category') %></th>
          <th><%= t('tests.index.question') %></th>
          <th colspan='4'><%= t('actions.actions') %></th>
        </tr>
        </thead>
        <tbody class="table-group-divider">
        <%= render @tests %>
        </tbody>
      </table>
    </div>
  </div>
</div>
