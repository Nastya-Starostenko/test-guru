<%= form_with model: [:admins, test],
              url: update_inline_admins_test_path(test),
              local: true, class: 'form-inline hide',
              data: { test_id: test.id} do |form| %>
    <%= form.text_field :title, id: :test_title, class: 'form-control mr-2' %>
<%= form.submit I18n.t('helpers.submit.test.inline_submit'), class: 'btn btn-primary' %>
<% end %>


<%= content_tag :h3, "#{@test_passage.question_number}. #{@test_passage.current_question.body}",
                class: 'mt-3', data: { current_question: @test_passage.question_number,
                                       total_questions: @test_passage.questions.count } %>

